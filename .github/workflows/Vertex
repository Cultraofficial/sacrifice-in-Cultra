name: Deploy to Vertex AI

on:
  push:
    branches:
      - main  # Change to the branch you want to trigger deployments

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v1
      with:
        version: 'latest'
        service_account_key: ${{ secrets.GCP_SA_KEY }}
        project_id: gen-lang-client-0492208227

    - name: Deploy to Vertex AI
      run: |
        # Add your Vertex AI deployment commands here
        # Example: gcloud ai custom-jobs create --region=us-central1 ...
