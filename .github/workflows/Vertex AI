name: Deploy to Vertex AI

on:
  push:
    branches:
      - main  # This specifies that deployments happen on code pushes to the main branch

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Google Cloud SDK
      uses: google-github-actions/setup-gcloud@v1
      with:
        version: 'latest'
        service_account_key: ${{ secrets.GCP_SA_KEY }}
        project_id: gen-lang-client-0492208227

    - name: Deploy Model to Vertex AI
      run: |
        gcloud ai custom-jobs create \
          --region=us-central1 \
          --display-name="vertex-ai-deployment-job" \
          --config="gs://cultra_official/config.yaml"  # Adjust as needed
